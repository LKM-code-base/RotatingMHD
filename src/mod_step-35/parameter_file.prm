set projection_method                 = rotational

subsection Physical parameters
  set Re                              = 100
end

subsection Time discretization parameters
  set dt                              = 5e-3
  set t_0                             = 0.
  set T                               = 0.1
end

subsection Space discretization parameters
  set n_global_refinements            = 3
  set p_fe_degree                     = 1
end

subsection Parameters of the diffusion-step solver
  set v_solver_max_iterations         = 1000  
  set v_solver_tolerance              = 1e-8  
  set v_solver_krylov_size            = 30    
  set v_solver_off_diagonals          = 70
  set v_solver_diag_strength          = 0.1
  set v_solver_update_preconditioner  = 10
end

set flag_verbose_output               = true
set output_interval                   = 1
